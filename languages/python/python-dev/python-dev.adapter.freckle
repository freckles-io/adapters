doc:
  author: Markus Binsteiner
  homepage: https://docs.freckles.io/en/latest/adapters/python-dev.html
  help: "installs a conda or virtualenv environment with all the system- and python dependencies of a python project freckle"
  short_help: "prepares a python development environment"

__freckles__:
  roles:
    - freckles-io.python-dev

available_vars:
  packages:
    help: "a list of (system or conda) packages to install"
  python_dev_version:
    help: "the version of python to use, defaults to '3'"
  python_dev_requirements_files:
    help: "a list of (pip) requirements files to use, defaults to all files in the freckle folder (recursively) which match the glob '.*requirements.*txt'."
  python_dev_setup:
    help: "whether to use 'pip'  or 'setuptools' as the install command, defaults to 'pip'"
  python_dev_setuptools_command:
    help: "if 'setuptools' is used for 'python_dev_setup', this specifies the sub-command it should use to setup, defaults to 'install' (could also be 'develop' for example)"

args:
  python_dev_project_name:
    alias: project-name
    required: false
    type: str
    doc:
      help: the name of the project, used for naming the development environment, defaults to folder name
    click:
      option:
        metavar: NAME
  python_dev_env_type:
    alias: "env-type"
    required: false
    default: "virtualenv"
    type: str
    doc:
      help: the package manager to use
    click:
      option:
        type:
          - conda
          - virtualenv
  python_dev_python_version:
    alias: python-version
    type: str
    required: false
    doc:
      help: the version of python to use to create the environment
    click:
      option:
        multiple: false
        metavar: "VERSION"
  python_dev_setup_type:
    alias: setup-type
    default: "pip"
    doc:
      help: "how to setup the project once the virtualenv is created, defaults to 'pip'"
    click:
      option:
        type:
         - pip
         - setuptools
  python_dev_requirements_files:
    alias: requirements_files
    cli_enabled: false
    type: list
    doc:
      help: "a list of files that contain package requirements, to be installed into the virtual environment"
  python_dev_dependency_packages:
    alias: dependency-packages
    required: false
    doc:
      help: additional (system/conda) packages to be installed
    cli_enabled: false

tasks_folder:
  - tasks.python-dev.yml
