doc:
  author: Markus Binsteiner
  homepage: https://docs.freckles.io/en/latest/adapters/python-dev.html
  help: "installs a conda or virtualenv environment with all the system- and python dependencies of a python project freckle"
  short_help: "prepares a python development environment"

__freckles__:
  roles:
    - freckles-io.python-dev

available_vars:
  packages:
    help: "a list of (system or conda) packages to install"
  python_dev_version:
    help: "the version of python to use, defaults to '3'"
  python_dev_requirements_files:
    help: "a list of (pip) requirements files to use, defaults to all files in the freckle folder (recursively) which match the glob '.*requirements.*txt'."
  python_dev_setup:
    help: "whether to use 'pip'  or 'setuptools' as the install command, defaults to 'pip'"
  python_dev_setuptools_command:
    help: "if 'setuptools' is used for 'python_dev_setup', this specifies the sub-command it should use to setup, defaults to 'install' (could also be 'develop' for example)"

args:
  pkg_mgr:
    alias: "pkg-mgr"
    required: false
    default: "auto"
    type: str
    doc:
      help: the package manager to use, currently supported 'auto', 'conda', 'nix'
    click:
      option:
        multiple: false
        metavar: "PKG_MGR"
  python_version:
    alias: python-version
    type: str
    required: false
    doc:
      help: the version of python to use to create the environment
    click:
      option:
        multiple: false
        metavar: "VERSION"
